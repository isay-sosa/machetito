<% content_for :page_title, t('.page_title') %>

<h1 class="title has-text-centered"><%= t('.title') %></h1>

<%= form_with(model: @user, url: invitation_path(@user.invite_token), local: true) do |f| %>
  <div class="field">
    <%= f.label :first_name %>
    <%= f.text_field :first_name, class: 'input' %>
  </div>

  <div class="field">
    <%= f.label :last_name %>
    <%= f.text_field :last_name, class: 'input' %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <%= f.password_field :password, class: 'input' %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, class: 'input' %>
  </div>

  <div class="control">
    <%= f.submit t('.submit'), class: 'button is-info' %>
  </div>

<% end %>
